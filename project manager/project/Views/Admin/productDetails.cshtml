@model project.Models.movie
@{
    ViewBag.Title = "productDetails";
}
<meta charset="UTF-8">
<meta http-equiv="X-UA-Compatible" content="IE=edge">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
      integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
<link rel="stylesheet" href="./style.css">
<title>Cinemar</title>
<link rel="stylesheet" href="fontawesome-free-6.0.0-web/css/all.min.css">
<link href="https://fonts.googleapis.com/css2?family=Roboto:wght@100&display=swap" rel="stylesheet">
<link rel="stylesheet" href="fontawesome-free-5.15.4-web/css/all.min.css">
<link rel="stylesheet" href="~/Content/styleMain.css">

<div class="d-flex flex-column justify-content-center align-items-center ">
    <img style="width: 300px; height: 40px;" src="~/Content/img/galaxy-logo.png" alt="" />
    <img src="~/Content/img/@Model.imgMovie" style="width: 200px ; height:200px" />
    <table class="table"style="width:1000px">
        <thead>
            <tr>
                <th scope="col" style="width:100px">Name</th>
                <th scope="col" style="width:100px">Price: </th>
                <th scope="col" style="width:200px">Des: </th>
                <th scope="col" style="width:100px">ReleaseDate:</th>
                <th scope="col" style="width:100px">Address:</th>
                <th scope="col" style="width:100px">Cinemar:</th>
            </tr>
        </thead>
        <tr>
            <td scope="row">@Model.name</td>
            <td>$@Model.price</td>
            <td>@Model.des</td>
            <td>@Model.releaseDate</td>
            <td>@Model.address.aName</td>
            <td>@Model.cinemar.cName</td>
        </tr>
    </table>

        <button type="button" class="btn btn-info mb-2" style="margin-left:20px">
            <a style=" text-decoration: none !important;
    list-style: none !important;color:white !important" href="@Url.Action("Products","Admin")"><i class="fa fa-sign-out"></i>Back</a>
        </button>
</div>